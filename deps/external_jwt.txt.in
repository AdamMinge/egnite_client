# -------------------------------------------------------------------------------------------------- #
# -------------------------------------- Set CMake version ----------------------------------------- #
# -------------------------------------------------------------------------------------------------- #
cmake_minimum_required(VERSION 3.11)
# -------------------------------------------------------------------------------------------------- #
# -------------------------------------- Fetch dependencies ---------------------------------------- #
# -------------------------------------------------------------------------------------------------- #
project(jwt NONE)

set(prefix_dir @CMAKE_CURRENT_BINARY_DIR@/jwt)
set(src_dir ${prefix_dir}/src/jwt)
set(build_dir ${prefix_dir}/src/jwt-build)
set(install_dir ${prefix_dir}/src/jwt-install)

include(ExternalProject)
ExternalProject_Add(
    jwt
    GIT_REPOSITORY      https://github.com/Thalhammer/jwt-cpp.git
    GIT_TAG             v0.6.0
    PREFIX              ${prefix_dir}
    CONFIGURE_COMMAND   cd ${build_dir} && ${CMAKE_COMMAND} -G "${CMAKE_GENERATOR}" -DCMAKE_INSTALL_PREFIX=${install_dir} ${src_dir}
    BUILD_COMMAND       cd ${build_dir} && $(MAKE)
    INSTALL_COMMAND     cd ${build_dir} && $(MAKE) install
    TEST_COMMAND        "")